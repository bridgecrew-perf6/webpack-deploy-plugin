{
  "compilerOptions": {
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "lib/"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
